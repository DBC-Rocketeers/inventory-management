<div class="register-container">
  <%= form_for :employee, html: { class: "employee-input" }, url: employees_path do |f| %>
    <h2>Register an Employee</h2>
    <%= f.text_field :name, placeholder: "name " %>
    <%= f.text_field :employee_id, placeholder: "employee id" %>
    <%= f.password_field :password, placeholder: "password" %>
    <div class="check-box">
      <label for="checkbox_id">Make this employee an Admin?</label>
      <%= f.check_box :admin, id: "checkbox_id" %>
    </div>
    <%= f.submit 'Add Employee', class: "submit-class-name-here" %>
  <% end %>
</div>
